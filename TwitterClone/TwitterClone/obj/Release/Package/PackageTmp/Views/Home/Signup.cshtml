@model TwitterClone.Models.Person
@{
                /**/

                ViewBag.Title = "Login";
}

<div>
    <div class="col-md-6 col-md-offset-3" >
        <h3>SignUp</h3>
        <h3>Person</h3>
        <form novalidate name="form"  role="form">
            <wait-cursor ng-show="vm.isBusy"></wait-cursor>
            <div class="form-group">
                @Html.DisplayNameFor(Model => Model.User_id)
                @Html.TextBoxFor(Model => Model.User_id, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(Model => Model.Password)
                @Html.PasswordFor(Model => Model.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(Model => Model.Fullname)
                @Html.PasswordFor(Model => Model.Fullname, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(Model => Model.Email)
                @Html.PasswordFor(Model => Model.Email, new { @class = "form-control" })
            </div>
            <div class="form-actions">
                <button type="submit" ng-disabled="form.$invalid || vm.isBusy" class="btn btn-primary">SignUp</button>
            </div>
        </form>
       
   
    </div>
</div>

