@model TwitterClone.Models.Person
@{
                /**/

                ViewBag.Title = "Login";
}

<div>
    <div class="col-md-6 col-md-offset-3" >
        <h3>Welcome to my Twitter Clone</h3>
     
        <form novalidate name="form" ng-submit="vm.login()" role="form">
            <wait-cursor ng-show="vm.isBusy"></wait-cursor>
            <div class="form-group">
                @Html.DisplayNameFor(Model => Model.User_id)
                @Html.TextBoxFor(Model => Model.User_id)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(Model => Model.Password)
                @Html.PasswordFor(Model => Model.Password)
            </div>
            <div class="form-actions">
                <button type="submit" ng-disabled="form.$invalid || vm.isBusy" class="btn btn-primary">Login</button>
            </div>
        </form>
       
   
    </div>
</div>

